<h3>新增商品</h3>
<%= simple_form_for [:admin, @product] do |f| %>
<div class="group">
    <%= f.input :title %>
  </div>
<div class="group">
  <%= f.input :description %>
</div>

<div class="group">
  <%= f.input :quantity %>
</div>

<div class="group">
  <%= f.input :price %>
</div>

<div class="group">
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "类别") %>
</div>
<br>
<div class="group">
  <%= f.input :image, as: :file %>
</div>

<div class="group">
  <%= f.input :particulars, as: :wysihtml5, :label => "商品详情" %>
</div>

<%= f.submit 'Submit', data: { disable_with: "Submiting..."} %>

<% end %>

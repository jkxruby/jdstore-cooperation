

<h2> Product List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, :class => "btn btn-default btn-sm") %>
</div>
<table class="table table-bordered table-responsive">

  <thead>
    <tr>
      <td>ID</td>
      <td width="220"></td>
      <td>商品名称</td>
      <td>描述</td>
      <td>库存</td>
      <td>价格</td>
      <td width="100">操作</td>
      <td>创建时间</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to product_path(product) do%>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class:"thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to(product.title, product_path(product)) %></td>
        <td><%= simple_format(product.description) %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product)) %> |
          <%= link_to("destroy", admin_product_path(product), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
          <br>
        </td>
        <td><%= product.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
